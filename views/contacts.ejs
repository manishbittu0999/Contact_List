<html>
    <head>
        <title>
            <%= title %>
        </title>
        <script src="https://kit.fontawesome.com/8c43ba49d3.js" crossorigin="anonymous"></script>
        <link rel="stylesheet" href="/css/contacts.css">
    </head>

    <body>
        <div id="heading">
            <h1><i class="fa-solid fa-address-book"></i>&nbsp;Contact List</h1>
        </div>
        

        <div id="contact-list-container">
            <ul>
                <% for(let i of contact_List) { %>
                    <li>
                        <div class="new-contact">
                            <p> <%= i.name %> </p>
                            <p> <%= i.phone %> </p>

                            <div class="delete-button">
                                <!-- query -->
                                <!-- <a href="/delete-contact/?phone=<%= i.phone %>"></a> -->
                                <!-- params -->
                                <a href="/delete-contact/<%= i.phone %>">
                                    <i class="fa-solid fa-trash"></i>
                                </a>
                                
                            </div>
                        </div>
                    </li>
                <% } %>
    
                </ul>

        </div>

            <form id="new-contact-form" action="/create-contact" method="post">
                <input type="text" name="name" placeholder="Enter Name" required>
                <input type="number" name="phone" placeholder="Enter Mobile Number" required>
                <button type="submit">Add Contact</button>
            </form>


    </body>
</html>